---
import "../styles/global.css";
import { UserProfile } from "@/components/UserProfile";
import { UserDropdown } from "@/components/UserDropdown";

// Redirect if not logged in
if (!Astro.locals.user) {
  return Astro.redirect("/login");
}

const user = Astro.locals.user;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Mi Perfil - AI Astro Voice</title>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50">
      <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center py-6">
            <div class="flex items-center gap-6">
              <div>
                <h1 class="text-3xl font-bold text-gray-900">AI Astro Voice</h1>
                <p class="mt-1 text-sm text-gray-600">Mi Perfil</p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <nav class="flex gap-4">
                <a 
                  href="/dashboard" 
                  class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
                >
                  Dashboard
                </a>
                <a 
                  href="/record" 
                  class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
                >
                  Grabar
                </a>
                <a 
                  href="/notes" 
                  class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
                >
                  Mis Notas
                </a>
              </nav>
              <div class="h-6 w-px bg-gray-300"></div>
              <UserDropdown user={user} client:load />
            </div>
          </div>
        </div>
      </header>

      <main class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">
            Mi Perfil
          </h2>
          <p class="text-gray-600">
            Información de tu cuenta y configuración.
          </p>
        </div>

        <UserProfile user={user} client:load />
      </main>
    </div>
  </body>
</html>